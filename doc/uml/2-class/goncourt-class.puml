@startuml

abstract class Person {
  - first_name : str
  - last_name : str
}

class Author {
  - biography : str
}

class JuryMember {
  - login : str
  - password : str
  - role : enum
}

class User {
 +User : User()
}

class Book {
  - title : str
  - summary : str
  - number_pages : int
  - publication_date : date
  - isbn : str
  - price : float
}

class Character {
  - name : str
}

class Selection {
  - date_selection : date
  - number_selection : int
}

class Vote{
 - id_vote : int
 - id_book : int
 - id_jury_member : int
}

class Publisher {
  - name : str
  - address : str
}

Person <|-- Author
Person <|-- User
Person <|-- JuryMember

Author "1" --> "0..*" Book
Book "0..*" --> "1" Character
Selection "1..*" --> "0..*" Book
JuryMember "1" --> "0..*" Vote
Vote "1" --> "1" Book

Publisher "1" --> "0..*" Book

@enduml

